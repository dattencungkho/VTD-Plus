<style>
    .dropbtn {
        background-color: white;
        color: #858585;
        margin-top: 20px;
        border: none;
        height: 35px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    ul {
        list-style-type: none;
    }

    li {
        list-style-type: none;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 150px;
        box-shadow: 5px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #f58f8f;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #f58f8f;
    }

    .haha {
        background-color: white;
    }

        .haha > li {
            float: left;
            min-width: 150px;
        }

            .haha > li > a {
                color: black;
            }

        .haha li {
            position: relative;
        }

            .haha li a {
                padding: 10px;
                line-height: 20px;
                display: inline-block;
            }

        .haha .sub-menu {
            display: none;
            position: absolute;
            top: 0;
            left: 100%;
            width: 150px;
            background-color: white;
            padding: 5px 20px;
            margin-left: 150px;
        }

        .haha li:hover > .sub-menu {
            display: block;
        }

        .haha > li > .sub-menu {
            top: 0;
            left: 0;
        }
</style>
